<div id="editEmployeeModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="POST" action="/">
                <div class="modal-header">
                    <h4 class="modal-title">Edit Employee</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" id="input1" name="account_name" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" name="email" id="input2" placeholder="" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" id="input3" name=" password" required>
                    </div>
                    <div class="form-group">
                        <label>Departement id</label>
                        <input type="number" class="form-control" id="input4" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input type="submit" class="btn btn-info" value="Save">
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    let input1 = document.querySelector('#input1')
    let input2 = document.querySelector('#input2')
    let input3 = document.querySelector('#input3')
    let input4 = document.querySelector('#input4')

    let x = document.querySelectorAll('.edit');
    x.forEach(edit => edit.addEventListener('click', () => {
        console.log('cliked');
        // console.log(edit.parentElement.parentElement.children[1])
        let id = edit.parentElement.parentElement.children[0]
        let name = edit.parentElement.parentElement.children[1]
        let email = edit.parentElement.parentElement.children[2]
        let password = edit.parentElement.parentElement.children[3]
        let id_departement = edit.parentElement.parentElement.children[4]

        input1.value = name.textContent
        input2.value = email.textContent
        input3.value = password.textContent
        input4.value = id_departement.textContent

    }))
    document.body.parentElement
    // function Edit() {}
</script>